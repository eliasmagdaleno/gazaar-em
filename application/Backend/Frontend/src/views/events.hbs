{{> filter}}

<!-- Main Content Section -->
<main class="main-content flex flex-row flex-1 w-fit p-4">
  <!-- Product Cards Grid -->
  <div class="event-section flex flex-row mr-4 mt-4">
    <div class="event-cards-grid grid grid-cols-4 gap-4">
      {{#each events}} {{> eventcard}} {{/each}}
    </div>
  </div>
  <!-- Create New Listing Button -->
  <div class="create-listing-button-container text-right mb-4">
    <a href="/createlisting">
      <button
        class="create-listing-button bg-light-black-500 text-dark-gray-500 py-2 px-4 shadow-md rounded cursor-pointer"
      >
        Create New Listing
      </button>
    </a>
  </div>
</main>
