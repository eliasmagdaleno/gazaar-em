<div class="profile-page-container bg-light-gray-500 h-screen flex flex-col gap-10 p-6">
  <!-- User Information Section -->
  <div class="user-info-section flex flex-row items-center gap-6 bg-white p-6 rounded-lg shadow-md">
    <img
      class="user-profile-pic w-24 h-24 rounded-full object-cover"
      src="/frontend/Assets/icons/feather-light-black/user.svg"
      alt="User Profile Picture"
    />
    <div class="user-details flex flex-col">
      <h1 class="user-name text-3xl font-bold">{{username}}</h1>
      <p class="user-bio text-lg text-gray-600">{{bio}}</p>
      <a
        href="/settings"
        class="edit-profile-link text-blue-500 hover:underline mt-2"
      >Edit Profile</a>
    </div>
  </div>

  <!-- Posted Items Section -->
  <div class="posted-items-section">
    <h2 class="section-header text-2xl font-bold mb-4">Your Posted Items</h2>
    <div class="items-list grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
      {{#each items}}
        {{> productcard-home}}
      {{else}}
        <p class="text-gray-600">You have not posted any items yet.</p>
      {{/each}}
    </div>
  </div>

  <!-- Posted Events Section -->
  <div class="posted-events-section">
    <h2 class="section-header text-2xl font-bold mb-4">Your Posted Events</h2>
    <div class="events-list grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
      {{#each events}}
        {{> eventcard}}
      {{else}}
        <p class="text-gray-600">You have not created any events yet.</p>
      {{/each}}
    </div>
  </div>
</div>