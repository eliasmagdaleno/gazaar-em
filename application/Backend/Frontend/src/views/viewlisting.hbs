    <!-- Center Section: Main Image -->
    <div class="main-img col-span-7 relative mr-4 ml-4">
      <img
        class="w-full h-96 object-cover rounded-md"
        src="{{imageURL}}"
        alt="Main Image"
        id="mainImage"
      />
