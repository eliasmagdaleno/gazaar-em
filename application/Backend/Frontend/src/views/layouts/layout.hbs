<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link
            rel="stylesheet"
            type="text/css"
            href="/frontend/src/css/output.css?version=3"
        />
        {{#each css}}
        <link
            rel="stylesheet"
            type="text/css"
            href="/frontend/src/css/{{this}}"
        />
        {{/each}} {{#each js}}
        <script
            defer
            src="/frontend/src/js/{{this}}"
            type="text/javascript"
        ></script>
        {{/each}}

        <!-- Google tag (gtag.js) -->
        <script async src="https://www.googletagmanager.com/gtag/js?id=G-2N2JK3N0SD"></script>
        <script>
          window.dataLayer = window.dataLayer || [];
          function gtag(){dataLayer.push(arguments);}
          gtag('js', new Date());

          gtag('config', 'G-2N2JK3N0SD');
        </script>

        <title>{{title}}</title>
    </head>
    <body class="bg-white h-screen flex flex-col overflow-hidden">
        <div class="banner w-screen bg-light-black-500 sticky top-0 z-50">
            {{> header}} {{> navbar}}
        </div>
        <main class="flex flex-1 overflow-hidden">{{{content}}}</main>
        <script
            src="/frontend/src/js/navbar.js"
            type="text/javascript"
        ></script>
    </body>
</html>
