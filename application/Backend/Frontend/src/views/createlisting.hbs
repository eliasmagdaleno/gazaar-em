<div
  class="create-listing-container flex flex-col gap-10 p-6 w-full overflow-y-scroll"
>
  <!-- Selection Section -->
  <div class="selection-section bg-dark-gray-500 p-6 rounded-lg shadow-lg">
    <h2 class="text-2xl font-bold mb-4 text-light-black-500 text-center">
      Select Listing Type
    </h2>
    <div class="flex gap-4">
      <button
        id="productButton"
        class="w-1/2 px-4 py-2 bg-light-orange-500 text-light-black-500 text-xl font-semibold rounded hover:bg-blood-orange-500 transition shadow-md cursor-pointer flex flex-row items-center justify-center gap-3"
      >
        <img
          src="/frontend/assets/icons/feather-light-black/shopping-cart.svg"
          alt="Items"
          class="w-8 h-8"
        />
        <span>Product</span>
      </button>
      <button
        id="eventButton"
        class="w-1/2 px-4 py-2 bg-light-orange-500 text-light-black-500 text-xl font-semibold rounded hover:bg-blood-orange-500 transition shadow-md cursor-pointer flex flex-row items-center justify-center gap-3"
      >
        <img
          src="/frontend/assets/icons/feather-light-black/calendar.svg"
          alt="Event"
          class="w-8 h-8"
        />
        <span>Event</span>
      </button>
    </div>
  </div>

  <!-- Form Section -->
  <div id="formSection" class="flex flex-row gap-12 flex-grow hidden">
    <!-- Left Section: Form -->
    <div
      class="create-listing-form w-1/2 bg-dark-gray-500 p-6 rounded-lg shadow-lg mr-4 text-light-black-500"
    >
      <h2 class="create-listing-header text-3xl font-bold mb-6">
        Create Listing
      </h2>
      <form
        id="CreatingListingForm"
        action="/createlisting"
        method="POST"
        enctype="multipart/form-data"
        class="space-y-4"
      >
        <input type="hidden" id="kind" name="kind" value="" />
        <div class="form-field">
          <label for="title" class="block text-lg font-semibold mb-2 after:ml-0.5 after:text-red-500 after:content-['*']">
            Title
          </label>
          <input
            type="text"
            id="title"
            name="title"
            required
            class="w-full px-4 py-2 bg-white border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-light-orange-500"
          />
        </div>
        <div id="productFields" class="hidden">
          <div class="form-field">
            <label for="price" class="block text-lg font-semibold mb-2 after:ml-0.5 after:text-red-500 after:content-['*']">
              Price
            </label>
            <input
              type="number"
              id="price"
              name="price"
              step="0.01"
              class="w-full px-4 py-2 bg-white border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-light-orange-500"
            />
          </div>
          <div class="form-field">
            <label for="category" class="block text-lg font-semibold mb-2 after:ml-0.5 after:text-red-500 after:content-['*']">
              Category
            </label>
            <select
              id="category"
              name="category"
              class="w-full px-4 py-2 bg-white border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-light-orange-500"
            >
              <option value="books">Books</option>
              <option value="electronics">Electronics</option>
              <option value="furniture">Furniture</option>
            </select>
          </div>
        </div>
        <div id="eventFields" class="hidden">
          {{!-- <div class="form-field">
            <label for="location" class="block text-lg font-semibold mb-2 after:ml-0.5 after:text-red-500 after:content-['*']">
              Location
            </label>
            <input
              type="text"
              id="location"
              name="location"
              class="w-full px-4 py-2 bg-white border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-light-orange-500"
            />
          </div> --}}
          <div class="form-field">
            <label for="date" class="block text-lg font-semibold mb-2 after:ml-0.5 after:text-red-500 after:content-['*']">
              Event Date
            </label>
            <input
              type="date"
              id="date"
              name="date"
              class="w-full px-4 py-2 bg-white border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-light-orange-500"
            />
          </div>
        </div>
        <div class="form-field">
          <label for="description" class="block text-lg font-semibold mb-2 after:ml-0.5 after:text-red-500 after:content-['*']">
            Description
          </label>
          <textarea
            id="description"
            name="description"
            rows="4"
            class="w-full px-4 py-2 bg-white border border-gray-300 rounded resize-none focus:outline-none focus:ring-2 focus:ring-light-orange-500"
          ></textarea>
        </div>
      </form>
    </div>

    <!-- Right Section: Images -->
    <div
      class="images-section w-1/2 bg-dark-gray-500 p-6 rounded-lg shadow-lg text-light-black-500 flex flex-col items-center justify-center"
    >
      <h2 class="text-2xl font-bold mb-4">Upload Image</h2>
      <div class="form-field w-full flex flex-col items-center">
        {{!--
        <label for="images" class="block text-lg font-semibold mb-2">
          Upload Listing Image
        </label>
        --}}
        <div
          id="imagePreview"
          class="image-preview w-3/5 h-3/5 object-scale-down mt-4 flex items-center justify-center"
        >
          <img
            id="currentImage"
            class="w-full h-full object-scale-down border border-gray-300 self-center rounded-md"
            src=""
          />
        </div>
        <input
          type="file"
          id="images"
          name="images"
          accept="image/*"
          form="CreatingListingForm"
          class="w-full px-4 py-2 border border-gray-300 bg-white rounded focus:outline-none focus:ring-2 focus:ring-light-orange-500 mt-4"
          onchange="handleImageUpload(event)"
        />
      </div>
    </div>
  </div>
  <!-- Next Button at the bottom of the page -->
  <div class="flex justify-end self-center mt-8">
    <button
      id="nextPageButton"
      class="bg-light-orange-500 text-light-black-500 w-md px-6 py-2 text-xl font-semibold rounded shadow-md hover:bg-blood-orange-500 transition cursor-pointer hidden enabled"
      onclick="goToNextPage()"
      type="button"
    >
      Next Page
    </button>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const productButton = document.getElementById('productButton');
    const eventButton = document.getElementById('eventButton');
    const formSection = document.getElementById('formSection');
    const productFields = document.getElementById('productFields');
    const eventFields = document.getElementById('eventFields');
    const nextPageButton = document.getElementById('nextPageButton');
    const imageInput = document.getElementById('images');
    const imagePreview = document.getElementById('currentImage');
    const kindInput = document.getElementById('kind');

    productButton.addEventListener('click', function () {
      formSection.classList.remove('hidden');
      productFields.classList.remove('hidden');
      eventFields.classList.add('hidden');
      nextPageButton.classList.remove('hidden');
      document.getElementById('category').enabled = false;
      if (kindInput) kindInput.value = 'product';
    });

    eventButton.addEventListener('click', function () {
      formSection.classList.remove('hidden');
      eventFields.classList.remove('hidden');
      productFields.classList.add('hidden');
      nextPageButton.classList.remove('hidden');
      document.getElementById('category').disabled = false;
      if (kindInput) kindInput.value = 'event';
    });

    imageInput?.addEventListener('change', function (event) {
      const file = event.target.files[0];
      if (file && file.type.startsWith('image/')) {
        const imageURL = URL.createObjectURL(file);
        imagePreview.src = imageURL;
        imagePreview.classList.remove('hidden');
      } else {
        imagePreview.src = '';
        imagePreview.classList.add('hidden');
      }
    });
  });

  function goToNextPage() {
    document.getElementById("CreatingListingForm").submit();
  }
</script>
