<div
  class="event-card-marketplace bg-#f6f6f6 rounded-lg shadow-md overflow-hidden flex flex-col h-full p-4"
>
  <img
    class="event-image w-full rounded-lg h-48 object-cover cursor-pointer"
    src="{{thumbnail}}"
    alt="{{title}}"
  />
  <div class="event-info p-2 text-left">
    <p class="event-date font-semibold text-base">{{date}}</p>
    <button
      class="event-link"
      id="event-link"
      onclick="window.location.href='/events'"
    >
      <h3 class="event-title text-lg font-bold cursor-pointer">{{title}}</h3>
    </button>
    <p class="event-host">{{host}}</p>
    <p class="event-location text-sm text-gray-500">{{location}}</p>
  </div>
