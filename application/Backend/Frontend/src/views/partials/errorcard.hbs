<div id="error-card">
  <div
    class="error-page bg-light-gray-500 min-h-screen flex flex-col items-center justify-center"
  >
    <h1 class="text-4xl font-bold text-red-500 mb-4">An Error Occurred</h1>
    <p class="text-lg text-gray-700 mb-2">{{errorTitle}}</p>
    <p class="text-base text-gray-600">{{errorMessage}}</p>
    <a
      href="/"
      class="mt-4 px-4 py-2 bg-light-orange-500 text-white rounded hover:bg-blood-orange-500 transition shadow-md"
    >
      Go Back to Home
    </a>
  </div>
</div>
