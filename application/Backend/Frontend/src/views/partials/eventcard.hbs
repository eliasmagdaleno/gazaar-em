<div class="event-card bg-#f6f6f6 overflow-hidden relative">
    <div
        class="event-img-section border border-light-gray-500 object-contain rounded-lg"
    >
        <button
            class="event-link w-full h-48 cursor-pointer"
            id="event-link"
            onclick="window.location.href='/viewlisting/{{item_id}}'"
        >
            <img class="event-img w-full h-full object-scale-down rounded-md" src="{{thumbnail}}" alt="{{title}}" />
        </button>
    </div>

    <div class="event-info p-2 text-left">
        <p class="event-date font-semibold text-base">{{postDate}}</p>
        <button
            class="event-link"
            id="event-link"
            onclick="window.location.href='/viewlisting/{{item_id}}'"
        >
            <h3
                class="event-title font-bold text-lg sm:text-sm md:text-base cursor-pointer"
            >
                {{title}}
            </h3>
        </button>
        {{!--
        <p class="event-host">{{host}}</p>
        --}}
    </div>
    {{!--
    <span class="save-button-span absolute">
        <button
            class="save-button bg-blood-orange-500 rounded-full ml-1 mt-1 cursor-pointer"
            id="save-button"
        >
            <img
                class="bookmark-icon size-6"
                src="/frontend/assets/icons/feather-dark-gray/bookmark.svg"
                alt="Bookmark"
            />
        </button>
    </span>
    --}}

    <span class="delete-button-span absolute bottom-10 right-2">
        <form
            action="/events/delete"
            method="POST"
            onsubmit="return confirm('Delete this listing?');"
        >
            <input type="hidden" name="id" value="{{id}}" />
            <button type="submit" class="delete-button p-1">
                <img
                    src="/frontend/assets/icons/feather-light-black/trash-2.svg"
                    alt="Delete"
                    class="w-6 h-7"
                />
            </button>
        </form>
    </span>
</div>
