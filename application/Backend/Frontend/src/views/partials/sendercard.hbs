<button
  class="sender-card bg-dark-gray-500 border border-dark-gray-500 hover:bg-light-gray-500 w-sm h-20 mx-4 rounded-3xl p-4 shadow-md flex flex-row gap-6"
>
  <img
    class="sender-pfp h-16 w-16 rounded-full justify-self-center"
    src="/frontend/Assets/icons/feather-light-black/user.svg"
  />
  <div class="sender-info flex flex-row w-full gap-2">
    <div class="flex flex-col text-left">
      <p class="sender-name font-bold text-lg">NAME{{name}}</p>
      <p class="sender-last-message text-shadow-md">Last Message{{lastMessage}}</p>
    </div>
    <p
      class="sender-timestamp text-gray-500 ml-auto self-center"
    >Monday{{timestamp}}</p>
  </div>
</button>