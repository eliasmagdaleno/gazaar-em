<div
  class="product-card bg-dark-gray-500 rounded-lg p-2 shadow-md flex flex-row gap-4 relative"
>
  <div class="product-img-section">
    <img
      class="product-img object-cover h-48 w-full rounded-md cursor-pointer"
      src="{{thumbnail}}"
    />
  </div>
  <div class="product-info flex-col self-center w-full text-left gap-2">
    <button
      class="product-link"
      id="product-link"
      onclick="window.location.href='/listing'"
    >
      <h2
        class="product-title text-2xl sm:text-md md:text-3xl font-bold text-light-black-500 cursor-pointer"
      >{{title}}</h2>
    </button>
    <p class="product-price mt-2 font-semibold">${{price}}</p>
    <p class="product-condition mt-2">{{condition}}</p>
    <p class="product-description">{{description}}</p>
    <!-- <p class="product-seller">{{seller}}</p> -->
    <!-- <p class="product-location">{{location}}</p> -->
    <!-- <p class="product-description">{{description}}</p> -->
  </div>
