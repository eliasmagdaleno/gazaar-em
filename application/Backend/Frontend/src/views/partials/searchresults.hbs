
<div class="results-container">

    <div class="results-section">
        <h1 class="results-header">Results</h1>
        <p class="results-count">{{count}} Results found</p>
    </div>
        
    {{> filter}}    
       
    <div class="event-section">
        {{#each events}}
            {{> eventcard}}
        {{/each}}
    </div>

    {{#if products}}
        <div class="product-section">
            {{#each products}}
                {{> productcard}}
            {{/each}}
        </div>
    {{else}}
        <p>No products found.</p>
    {{/if}}
</div>
