<div class="flex items-center justify-center min-h-screen w-full">
  <div class="w-full max-w-md bg-dark-gray-100 p-12 rounded-lg shadow-lg">
    <h2 class="text-3xl text-light-black-500 font-semibold text-center mb-6">Register for Gazaar</h2>

    {{#if error}}
    <div class="mb-4 p-3 text-red-700 bg-red-100 border border-red-400 rounded">
      {{error}}
    </div>
    {{/if}}
    <form action="/register" method="POST" class="space-y-4">
      <div>
        <label for="name" class="sr-only">Full Name</label>
        <input id="name" name="name" type="text" placeholder="Full Name" required
          class="w-full px-4 py-2 bg-light-gray-500 text-light-black-500 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-light-orange-500" />
      </div>
      <div>
        <label for="email" class="sr-only">SFSU Email</label>
        <input id="email" name="email" type="email" placeholder="SFSU email (@sfsu.edu)"
          pattern="[a-zA-Z0-9._%+-]+@sfsu\.edu" required
          class="w-full px-4 py-2 bg-light-gray-500 text-light-black-500 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-light-orange-500" />
      </div>
      <div>
        <label for="password" class="sr-only">Password</label>
        <input id="password" name="password" type="password" placeholder="Password" required
          class="w-full px-4 py-2 bg-light-gray-500 text-light-black-500 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-light-orange-500" />
      </div>
      <div>
        <label for="confirm-password" class="sr-only">Confirm Password</label>
        <input id="confirm-password" name="confirm-password" type="password" placeholder="Confirm Password" required
          class="w-full px-4 py-2 bg-light-gray-500 text-light-black-500 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-light-orange-500" />
      </div>
      <button type="submit"
        class="w-full px-4 py-2 bg-light-orange-500 text-light-black-500 rounded hover:bg-blood-orange-500 transition shadow-md cursor-pointer">
        Register
      </button>
    </form>
    <p class="text-center text-gray-600 mt-4">
      Already have an account?
      <a href="/login" class="text-blue-500 hover:underline">Login</a>
    </p>
  </div>
</div>
